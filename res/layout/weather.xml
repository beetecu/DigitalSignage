<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    tools:context=".WeatherActivity" >

    <!--
         The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc.
    -->

    <!--
         This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows.
    -->

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true" >

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="horizontal"
            tools:ignore="UselessParent" >
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/screen"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" 
            android:background="#000000"
            android:visibility="gone"
            >
            

            <TextView
                android:id="@+id/fullscreen_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="5dp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:freezesText="true"
                android:gravity="center"
                android:keepScreenOn="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="Esta pantalla es interactiva. Conectese a esta pantalla desde su movil y obtenga informacion extra de los contenidos. Reserve automaticamente las oferta que se muestran. Comparta, opine y gane premios"
                android:textColor="#ffffff"
                android:textSize="28sp"
                android:textStyle="bold" />
            

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_above="@+id/fullscreen_content"  >
            
            
            
                <ImageView
        android:id="@+id/imageadTop"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo_snow" />

    <RelativeLayout
        android:layout_width="689dp"
        android:layout_height="270dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:background="#af2d3772" >

        <EditText
            android:id="@+id/tcondicion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="false"
            android:background="#ff2d3772"
            android:ems="10"
            android:gravity="left"
            android:text="Madrid"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:textStyle="bold"
            android:editable="false"
            android:typeface="normal" >

            <requestFocus />
        </EditText>

        <ImageView
            android:id="@+id/icurrent"
            android:layout_width="360dp"
            android:layout_height="match_parent"
            android:layout_above="@+id/tcondicion"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:src="@drawable/clear" />

        <EditText
            android:id="@+id/textCurrentTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/icurrent"
            android:layout_marginRight="20dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@+id/icurrent"
            android:background="#ff2d3772"
            android:ems="10"
            android:gravity="center"
            android:text="-23ยบ"
            android:textColor="#ffffff"
            android:textSize="98dp"
            android:textStyle="bold"
            android:editable="false"
            android:typeface="normal" />

        <EditText
            android:id="@+id/tcity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/icurrent"
            android:layout_alignLeft="@+id/textCurrentTemp"
            android:layout_below="@+id/textCurrentTemp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="#ff2d3772"
            android:ems="10"
            android:gravity="center"
            android:text="Boadilla del Monte "
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold"
            android:editable="false"
            android:typeface="normal" />

    </RelativeLayout>

